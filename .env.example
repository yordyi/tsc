# SEO Configuration Environment Variables
# Copy this file to .env.local and fill in your actual values

# Google Search Console Verification
# Get this from Google Search Console > Property Settings > Ownership Verification
NEXT_PUBLIC_GOOGLE_VERIFICATION=your-google-verification-code-here

# Google Analytics 4 Measurement ID
# Format: G-XXXXXXXXXX
NEXT_PUBLIC_GA4_MEASUREMENT_ID=

# Google Tag Manager Container ID (Optional)
# Format: GTM-XXXXXXX
NEXT_PUBLIC_GTM_ID=

# Microsoft Bing Webmaster Tools Verification
NEXT_PUBLIC_BING_VERIFICATION=

# Yandex Webmaster Verification
NEXT_PUBLIC_YANDEX_VERIFICATION=

# Site Configuration
NEXT_PUBLIC_SITE_NAME=TimestampConverter
NEXT_PUBLIC_SITE_URL=https://timestampconverter.dev
NEXT_PUBLIC_SITE_DESCRIPTION="Free online timestamp converter. Convert Unix timestamps to human-readable dates instantly."

# Social Media Handles
NEXT_PUBLIC_TWITTER_HANDLE=@timestampconverter
NEXT_PUBLIC_GITHUB_URL=https://github.com/your-username/timestamp-converter

# Performance Monitoring
NEXT_PUBLIC_ENABLE_PERFORMANCE_MONITORING=false

# Error Tracking (Optional)
NEXT_PUBLIC_SENTRY_DSN=

# Content Security Policy (Optional)
NEXT_PUBLIC_CSP_REPORT_URI=

# Additional SEO Features
NEXT_PUBLIC_ENABLE_STRUCTURED_DATA=true
NEXT_PUBLIC_ENABLE_BREADCRUMBS=true
NEXT_PUBLIC_ENABLE_SCHEMA_FAQ=true

# Development Settings
NODE_ENV=production